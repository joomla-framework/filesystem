<?xml version="1.0" encoding="UTF-8"?>
<phpunit bootstrap="Tests/bootstrap.php" colors="false">
	<testsuites>
		<testsuite name="Unit">
			<directory suffix="Test.php" phpVersion="7.1.0" phpVersionOperator="&lt;">Tests/php53</directory>
			<directory suffix="Test.php" phpVersion="7.1.0" phpVersionOperator="&gt;=">Tests/php71</directory>
		</testsuite>
	</testsuites>
	<php>
		<env name="SYMFONY_DEPRECATIONS_HELPER" value="weak"/>
	</php>

	<!--
	<logging>
		<log type="coverage-clover" target="build/logs/clover.xml" />
		<log type="junit" target="build/logs/junit.xml" logIncompleteSkipped="false" />
	</logging>
	-->

	<filter>
		<whitelist addUncoveredFilesFromWhitelist="true">
			<directory suffix=".php">src</directory>
		</whitelist>
	</filter>
</phpunit>
